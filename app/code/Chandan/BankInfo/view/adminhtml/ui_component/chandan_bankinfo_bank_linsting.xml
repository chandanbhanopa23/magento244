<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">chandan_bankinfo_bank_linsting.chandan_bankinfo_bank_listing_data_source</item>
            <item name="deps" xsi:type="string">chandan_bankinfo_bank_linsting.chandan_bankinfo_bank_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">chandan_bankinfo_colums</item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="bank/index/newbank"/>
                <class>primary</class>
                <label translate="true">Add New Bank</label>
            </button>
        </buttons>
    </settings>
    <dataSource name="chandan_bankinfo_bank_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">\Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">chandan_bankinfo_bank_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">id</item>
                    </item>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="chandan_bankinfo_colums">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">entity_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="entity_id">
            <settings>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="customer_id">
            <settings>
                <label translate="true">CUSTOMER ID</label>
            </settings>
        </column>
        <column name="bank_name">
            <settings>
                <label translate="true">BANK NAME</label>
            </settings>
        </column>
        <column name="bank_code">
            <settings>
                <label translate="true">BANK CODE</label>
            </settings>
        </column>
        <column name="bank_ifsc_code">
            <settings>
                <label translate="true">BANK IFSC CODE</label>
            </settings>
        </column>
        <column name="status">
            <settings>
                <label translate="true">STATUS</label>
            </settings>
        </column>
        <!-- action columns edit and delete -->
        <actionsColumn name="actions" class="Chandan\BankInfo\Ui\Component\Listing\Column\Actions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="resizeEnabled" xsi:type="boolean">false</item>
                    <item name="resizeDefaultWidth" xsi:type="string">107</item>
                    <item name="indexField" xsi:type="string">id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
