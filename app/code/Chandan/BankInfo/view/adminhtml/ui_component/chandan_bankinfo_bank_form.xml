<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">chandan_bankinfo_bank_form.chandan_bankinfo_bank_data_source</item>
            <item name="deps" xsi:type="string">chandan_bankinfo_bank_form.chandan_bankinfo_bank_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">General Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">chandan_bankinfo_bank_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <!--        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Neosoft\PostSellSurvey\Block\Adminhtml\Question\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Neosoft\PostSellSurvey\Block\Adminhtml\Question\Edit\DeleteButton</item>
            <item name="save" xsi:type="string">Neosoft\PostSellSurvey\Block\Adminhtml\Question\Edit\SaveButton</item>
            <item name="save_and_continue" xsi:type="string">Neosoft\PostSellSurvey\Block\Adminhtml\Question\Edit\SaveAndContinueButton</item>
        </item>-->
    </argument>
    <dataSource name="chandan_bankinfo_bank_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Chandan\BankInfo\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">chandan_bankinfo_bank_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" path="*/*/save" xsi:type="url"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="bank_info_field">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Bank Form</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="customer_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Chandan\BankInfo\Model\Config\Source\CustomerList</item>
                <item name="config" xsi:type="array">
                    <item name="additionalClasses" xsi:type="string">required</item>
                    <item name="dataType" xsi:type="string">varchar</item>
                    <item name="label" xsi:type="string" translate="true">Customer List</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="dataScope" xsi:type="string">customer_id</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">false</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="listens" xsi:type="array">
                        <item name="${ $.namespace }.${ $.namespace }:responseData" xsi:type="string">setParsed</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="bank_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Bank Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">bank_name</item>
                    <item name="dataScope" xsi:type="string">bank_name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="bank_code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Bank Code</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">bank_code</item>
                    <item name="dataScope" xsi:type="string">bank_code</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="bank_ifsc_code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">IFSC Code </item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">bank_ifsc_code</item>
                    <item name="dataScope" xsi:type="string">bank_ifsc_code</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <radioset name="status">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="additionalInfo" xsi:type="string">Status</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Bank Status</label>
                <options>
                    <option name="0" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Active</item>
                    </option>
                    <option name="1" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">InActive</item>
                    </option>
                </options>
            </settings>
        </radioset>
    </fieldset>
</form>