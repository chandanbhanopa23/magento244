<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
        <!-- Resource : default, checkout, sales-->
    <table name="customer_bank_details" resource="default" engine="innodb" comment="Customer Bank details">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false"
                comment="Customer Id"/>
        <column xsi:type="varchar" name="bank_name" nullable="false" length="255" comment="Bank Name"/>
        <column xsi:type="varchar" name="bank_code" nullable="false" length="255" comment="Bank Code"/>
        <column xsi:type="varchar" name="bank_branch" nullable="false" length="255" comment="Bank Branch"/>
        <column xsi:type="varchar" name="bank_ifsc_code" nullable="false" length="255" comment="Bank IFSC code"/>
        <column xsi:type="tinyint" name="status" length="1" comment="Bank Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="CUSTOMER_BANK_DETAILS_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
    </table>
</schema>
